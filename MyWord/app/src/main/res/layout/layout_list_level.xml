<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_brown_wood"
    android:gravity="center"
    android:paddingBottom="@dimen/s5dp">
    <LinearLayout
        android:id="@+id/linear_layout_item_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s30dp"
        android:weightSum="100"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s30dp"
        android:gravity="left"
        android:layout_weight="80"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="@dimen/s30dp"
            android:id="@+id/txt_game_level"
            style="@style/style_text_title"
            android:textSize="@dimen/s20dp"
            android:gravity="left"
            android:text="level" />

        <TextView
            android:id="@+id/txt_game_level_word_cnt"
            style="@style/style_text_title"
            android:text="level"
            android:layout_marginLeft="@dimen/s30dp"
            android:gravity="left"
            android:textSize="@dimen/s16sp"
            android:textStyle="italic" />

    </LinearLayout>
    <ImageView
        android:id="@+id/img_play"
        android:paddingTop="@dimen/s5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
         />
</LinearLayout>
</RelativeLayout>

