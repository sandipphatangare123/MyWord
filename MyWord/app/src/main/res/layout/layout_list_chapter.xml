<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_brown_wood"
    android:paddingBottom="@dimen/s5dp"
    >

    <TextView
        android:id="@+id/txt_game_level"
        style="@style/style_text_title"
        android:drawableLeft="@drawable/ic_general_names"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/s50dp"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/s5dp"
        android:text="level"
        android:textSize="@dimen/s20sp"/>
    <ImageView
        android:id="@+id/img_play"
        android:paddingTop="@dimen/s5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s50dp"
        android:layout_gravity="right"
        />
</RelativeLayout>

