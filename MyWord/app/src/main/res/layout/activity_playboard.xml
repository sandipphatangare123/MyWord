<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_bashboard"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"></include>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s80dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/toolbar"
            android:background="@drawable/selection"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/s10dp"
        android:layout_marginRight="@dimen/s10dp"
        android:layout_weight="75"
        tools:context="com.admin.wordgenrator.Playscreen2">

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/s60dp"
            android:layout_height="@dimen/s60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/s10dp"
            android:background="@drawable/refresh"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_hint"
            android:layout_width="@dimen/s60dp"
            android:layout_height="@dimen/s60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/s10dp"
            android:background="@drawable/hint"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/s50dp"
            android:layout_marginLeft="@dimen/s10dp"
            android:layout_marginRight="@dimen/s10dp"
            android:layout_marginTop="@dimen/s30dp"
            android:background="@drawable/play_frame"
            android:paddingBottom="@dimen/s50dp"
            android:paddingLeft="@dimen/s50dp"
            android:paddingRight="@dimen/s50dp"
            android:paddingTop="@dimen/s50dp">

            <TextView
                android:id="@+id/txt_hint"
                style="@style/style_text_title"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/txt_start_game" />

            <TextView
                android:id="@+id/img_1"
                style="@style/style_imgAplabates" />

            <TextView
                android:id="@+id/img_2"
                style="@style/style_imgAplabates"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_3"
                style="@style/style_imgAplabates"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/s30dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_4"
                style="@style/style_imgAplabates"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/s20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_5"
                style="@style/style_imgAplabates"
                android:layout_marginLeft="@dimen/s30dp"
                android:layout_marginTop="@dimen/s50dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_6"
                style="@style/style_imgAplabates"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/s30dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_7"
                style="@style/style_imgAplabates"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/s50dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_8"
                style="@style/style_imgAplabates"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/s30dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_9"
                style="@style/style_imgAplabates"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/img_10"
                style="@style/style_imgAplabates"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_next_word"
            style="@style/style_imgAplabates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home_play_button"
            android:text="@string/btn_next"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</LinearLayout>