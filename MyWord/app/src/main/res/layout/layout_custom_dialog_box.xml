<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/style_txt_view"
        android:padding="@dimen/s5dp"
        android:text="@string/txt_your_word_match"
        android:layout_gravity="center"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_word_title"
            style="@style/style_txt_view"
            android:padding="@dimen/s5dp"
            android:text="Word :" />

    <TextView
        android:id="@+id/txt_word"
        style="@style/style_txt_view"
        android:padding="@dimen/s5dp"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_word_english_meaning_title"
            style="@style/style_txt_view"
            android:padding="@dimen/s5dp"
            android:text="English Meaning : "
            />

    <TextView
        android:id="@+id/txt_word_english_meaning"
        style="@style/style_txt_view"
        android:padding="@dimen/s5dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_word_marathi_meaning_title"
            style="@style/style_txt_view"
            android:padding="@dimen/s5dp"
            android:text="Marathi Meaning : "
            />

    <TextView
        android:id="@+id/txt_word_marathi_meaning"
        style="@style/style_txt_view"
        android:padding="@dimen/s5dp"
       />

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/s2dp"
        android:text="Ok"
        android:background="@drawable/bg_btn_rounded_corner"
        android:textSize="16sp"/>

</LinearLayout>